<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quarkworks.apartmentgroceries.user.PhotoActivity">

    <!-- toolbar -->
    <include layout="@layout/main_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar_id">

        <!-- add photo -->
        <Button
            android:id="@+id/photo_add_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/add_photo_button"/>

        <!-- image view -->
        <ImageView
            android:id="@+id/photo_image_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_add_button_id"/>
    </RelativeLayout>
</RelativeLayout>
