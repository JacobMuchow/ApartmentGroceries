<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- grocery photo -->
    <ImageView
        android:id="@+id/grocery_pager_grid_view_image_view_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="0dp"

        android:padding="1dp"/>

    <!-- photo mask -->
    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/grocery_pager_grid_view_image_view_id"
        android:layout_alignTop="@+id/grocery_pager_grid_view_image_view_id"
        android:layout_margin="0dp"

        android:background="@drawable/photo_mask"/>
</RelativeLayout>