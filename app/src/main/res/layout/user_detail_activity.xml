<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quarkworks.apartmentgroceries.user.UserDetailActivity">

    <!-- toolbar -->
    <include layout="@layout/main_toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar_id"
        android:padding="@dimen/margin_padding_medium">
        <ImageView
            android:id="@+id/user_detail_profile_image_view_id"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:id="@+id/user_detail_edit_photo_text_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_detail_profile_image_view_id"
            android:text="@string/edit_photo"/>
        <TextView
            android:id="@+id/user_detail_edit_username_text_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_detail_edit_photo_text_view_id"
            android:text="@string/edit_photo"/>
    </RelativeLayout>

</RelativeLayout>
