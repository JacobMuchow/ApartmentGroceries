<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quarkworks.apartmentgroceries.auth.SignUpActivity">

    <!-- username -->
    <EditText
        android:id="@+id/sign_up_username_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="username"
        android:ems="10" />

    <!-- password -->
    <EditText
        android:id="@+id/sign_up_password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_username_id"
        android:layout_alignLeft="@+id/sign_up_username_id"
        android:layout_alignStart="@+id/sign_up_username_id"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="10" />

    <!-- second password-->
    <EditText
        android:id="@+id/sign_up_second_password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_password_id"
        android:layout_alignLeft="@+id/sign_up_username_id"
        android:layout_alignStart="@+id/sign_up_username_id"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="10" />

    <!-- sign up button -->
    <Button
        android:id="@+id/sign_up_submit_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_second_password_id"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_up_button" />

</RelativeLayout>
